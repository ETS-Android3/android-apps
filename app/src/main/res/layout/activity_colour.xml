<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColourActivity">

    <Button
        android:id="@+id/blackbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="12dp"
        android:onClick="setBlack"
        android:text="Black"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/yellowbutton"
        app:layout_constraintEnd_toStartOf="@+id/redbutton" />

    <Button
        android:id="@+id/redbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:onClick="setRed"
        android:text="red"
        app:backgroundTint="#D32F2F"
        app:layout_constraintBottom_toTopOf="@+id/greenbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.892" />

    <Button
        android:id="@+id/whitebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:onClick="setWhite"
        android:text="white"
        android:textColor="#000000"
        app:backgroundTint="#ffffff"
        app:layout_constraintEnd_toStartOf="@+id/bluebutton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/greenbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="16dp"
        android:onClick="setGreen"
        android:text="Green"
        app:backgroundTint="#008000"
        app:layout_constraintBottom_toTopOf="@+id/bluebutton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bluebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="92dp"
        android:onClick="setBlue"
        android:text="Blue"
        app:backgroundTint="#0000ff"
        app:layout_constraintBottom_toTopOf="@+id/saveButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/yellowbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="16dp"
        android:onClick="setYellow"
        android:text="yellow"
        android:textColor="#190101"
        app:backgroundTint="#ffff00"
        app:layout_constraintBottom_toTopOf="@+id/whitebutton"
        app:layout_constraintEnd_toStartOf="@+id/greenbutton" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="92dp"
        android:text="ok"
        android:onClick="onDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whitebutton" />

    <TextView
        android:id="@+id/currentcolour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginLeft="176dp"
        android:layout_marginBottom="40dp"
        android:text="Black"
        app:layout_constraintBottom_toTopOf="@+id/saveButton"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>